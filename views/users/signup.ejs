<% layout("/layout/boilerplate") -%>
<body>

            <div class="row mt-3">
                  <div class="col-6 offset-3">
                        <h1>SignUp On WonderLust </h1>
                        <form action="/signup" method="post" class="needs-validation" novalidate>
                              <div class="mb-3">
                                    <label for="username" class="form-label">username</label>
                                    <input type="text" id="username"  name="username" class="form-control" required><br>  
                                    <div class="valid-feedback">Enter proper Username</div>
                                    <div class="invalid-feedback">Enter a proper Title</div>                      
                              </div>
                              <div class="mb-3">
                                    <label for="email" class="form-label">email</label>
                                    <input type="email" id="email"  name="email" class="form-control" required><br>  
                                    <div class="valid-feedback">Title looks good</div>
                                    <div class="invalid-feedback">Enter a proper Title</div>                      
                              </div>
                              <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password"  name="password" class="form-control" required><br>  
                                    <div class="valid-feedback">Password looks good</div>
                                    <div class="invalid-feedback">Enter a proper password</div>                      
                              </div>
                              <button class="btn btn-success">Sign up</button>                                                           
                        </form>
                  </div>
            </div>
</body>