<% layout("/layout/boilerplate") -%>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <!-- <h2 class="mb-0">All Listings</h2> -->
    <a href="/listing/new" class="btn add-btn">+ Add Listing</a>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for (let item of allListings) { %>
      <div class="col d-flex">
        <a href="/listing/<%= item._id %>" class="listing-a-tag w-100">
          <div class="card h-100 listing-card shadow-sm">
            <img src="<%= item.image.url %>" class="card-img-top" alt="listing image" style="height: 16rem; object-fit: cover;">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title mb-2"><%= item.title %></h5>
                <p class="card-text text-muted mb-2" style="font-size: 0.95rem;">
                  <i class="fa-solid fa-location-dot"></i>
                  <%= item.location ? item.location : "Unknown Location" %>
                </p>
              </div>
              <div>
                <span class="fw-bold text-danger">&#x20B9; <%= item.price.toLocaleString("en-IN") %></span>
                <span class="text-muted">/Night</span>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>